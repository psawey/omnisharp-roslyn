{
    "dotnet": {
        "alias": "default",
        "projects": "**/project.json",
        "enablePackageRestore": true,
        "packageRestoreTimeout": "180"
    },
    "formattingOptions": {
        "newLine": "\n",
        "useTabs": false,
        "tabSize": 4,
        "indentationSize": 4
    },
    "testCommands": {
        "all": "nunit3-console.exe --noh {{AssemblyPath}}",
        "fixture": "nunit3-console.exe --noh {{AssemblyPath}} --test={{TypeName}}",
        "single": "nunit3-console.exe --noh {{AssemblyPath}} --test={{TypeName}}.{{MethodName}}"
    }
}
